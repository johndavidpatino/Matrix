@model MatrixNext.Data.Modules.CU.Models.SimuladorCostosViewModel

<!-- Modal Simulador de Costos -->
<div class="modal fade" id="modalSimulador" tabindex="-1" role="dialog" aria-labelledby="modalSimuladorLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalSimuladorLabel">
                    <i class="bi bi-calculator"></i> Simulador de Costos
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (Model != null)
                {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    Muestra y Metodología
                                </div>
                                <div class="card-body">
                                    <p><strong>Total Muestra:</strong> <span class="badge bg-info">@Model.TotalMuestra</span></p>
                                    <p><strong>Duración Estimada:</strong> 
                                        <span class="badge bg-warning text-dark">@Model.DiasEstimados días</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    Resultados Financieros
                                </div>
                                <div class="card-body">
                                    <p>
                                        <strong>Costo Directo:</strong>
                                        <br />
                                        <span class="badge bg-success" style="font-size: 1.1em;">
                                            $@Model.CostoDirecto.ToString("N0")
                                        </span>
                                    </p>
                                    <p>
                                        <strong>Valor Venta:</strong>
                                        <br />
                                        <span class="badge bg-success" style="font-size: 1.1em;">
                                            $@Model.ValorVenta.ToString("N0")
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Gross Margin -->
                    <div class="alert alert-success" role="alert">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h6 class="alert-heading mb-0">Margen Bruto (Gross Margin)</h6>
                            </div>
                            <div class="col-md-4 text-end">
                                <h4 class="mb-0">
                                    <strong>@Model.GrossMargin.ToString("F2")%</strong>
                                </h4>
                            </div>
                        </div>
                    </div>

                    <!-- Cost Breakdown -->
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            Desglose de Costos
                        </div>
                        <div class="card-body">
                            @if (Model.DesgloseCostos != null && Model.DesgloseCostos.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm table-borderless">
                                        <tbody>
                                            @foreach (var desglose in Model.DesgloseCostos)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@desglose.Concepto</strong>
                                                    </td>
                                                    <td class="text-end">
                                                        @if (desglose.Porcentaje.HasValue)
                                                        {
                                                            <span class="badge bg-light text-dark">@desglose.Porcentaje.Value.ToString("F2")%</span>
                                                        }
                                                    </td>
                                                    <td class="text-end">
                                                        <strong>$@desglose.Valor.ToString("N0")</strong>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No hay desglose disponible</p>
                            }
                        </div>
                    </div>

                    <!-- Legend -->
                    <div class="mt-3">
                        <p class="text-muted small mb-0">
                            <i class="bi bi-info-circle"></i>
                            <strong>Fórmula de Margen Bruto:</strong>
                            GM = (Valor Venta - Costo Directo) / Valor Venta × 100
                        </p>
                    </div>
                }
                else
                {
                    <p class="text-muted">No hay datos de simulador disponibles</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="exportarSimulador()">
                    <i class="bi bi-download"></i> Exportar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function exportarSimulador() {
        // Placeholder para exportar simulador a Excel
        alert('Exportación de simulador a Excel (próximamente)');
    }
</script>

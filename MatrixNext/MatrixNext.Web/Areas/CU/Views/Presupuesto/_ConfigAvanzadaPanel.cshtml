@model MatrixNext.Data.Modules.CU.Models.EditarPresupuestoViewModel

<div class="accordion" id="accordionAvanzado">
    <!-- Product Testing -->
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseProductTesting">
                Product Testing
            </button>
        </h2>
        <div id="collapseProductTesting" class="accordion-collapse collapse" data-bs-parent="#accordionAvanzado">
            <div class="accordion-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="ParUnidadesProducto" class="form-label">Unidades Producto</label>
                        <input type="number" id="ParUnidadesProducto" name="ParUnidadesProducto" class="form-control" 
                               min="0" value="@(Model.ParUnidadesProducto ?? 0)" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="ParValorUnitarioProd" class="form-label">Valor Unitario</label>
                        <input type="number" step="0.01" id="ParValorUnitarioProd" name="ParValorUnitarioProd" class="form-control" 
                               min="0" value="@(Model.ParValorUnitarioProd ?? 0)" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="PTLotes" class="form-label">Lotes</label>
                        <input type="number" id="PTLotes" name="PTLotes" class="form-control" 
                               min="0" max="255" value="@(Model.PTLotes ?? 0)" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CLT -->
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCLT">
                Central Location Test (CLT)
            </button>
        </h2>
        <div id="collapseCLT" class="accordion-collapse collapse" data-bs-parent="#accordionAvanzado">
            <div class="accordion-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="ParTipoCLT" class="form-label">Tipo CLT</label>
                        <select id="ParTipoCLT" name="ParTipoCLT" class="form-select">
                            <option value="0">Ninguno</option>
                            <option value="1">Tipo 1</option>
                            <option value="2">Tipo 2</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="ParAlquilerEquipos" class="form-label">Alquiler Equipos</label>
                        <input type="number" step="0.01" id="ParAlquilerEquipos" name="ParAlquilerEquipos" class="form-control" 
                               min="0" value="@(Model.ParAlquilerEquipos ?? 0)" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Interceptación/Reclutamiento -->
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseIntercep">
                Interceptación y Reclutamiento
            </button>
        </h2>
        <div id="collapseIntercep" class="accordion-collapse collapse" data-bs-parent="#accordionAvanzado">
            <div class="accordion-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="ParPorcentajeIntercep" class="form-label">% Interceptación</label>
                        <input type="number" id="ParPorcentajeIntercep" name="ParPorcentajeIntercep" class="form-control" 
                               min="0" max="100" value="@(Model.ParPorcentajeIntercep ?? 0)" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="ParPorcentajeRecluta" class="form-label">% Reclutamiento</label>
                        <input type="number" id="ParPorcentajeRecluta" name="ParPorcentajeRecluta" class="form-control" 
                               min="0" max="100" value="@(Model.ParPorcentajeRecluta ?? 0)" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

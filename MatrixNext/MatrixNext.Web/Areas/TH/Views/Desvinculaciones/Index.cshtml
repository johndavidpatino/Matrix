@{
    ViewData["Title"] = ViewData["Title"] ?? "Gestión de Desvinculaciones";
}

<div class="page-header">
    <div>
        <h1 class="page-title">@ViewData["Title"]</h1>
    </div>
</div>

<div id="desvApp" class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">Búsqueda</div>
            </div>
            <div class="card-body">
                <div class="row gy-3">
                    <div class="col-xl-4">
                        <input id="searchTexto" class="form-control" placeholder="Buscar..." />
                    </div>
                    <div class="col-xl-3">
                        <button id="btnBuscarDesv" class="btn btn-primary"><i class="ri-search-line"></i> Buscar</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">Desvinculaciones</div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblDesv" class="table table-bordered text-nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Empleado</th>
                                <th>Estatus</th>
                                <th>Fecha</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Iniciar -->
<div class="modal fade" id="modalIniciar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Iniciar Desvinculación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Empleado ID</label>
                    <input id="inEmpleadoId" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Fecha Retiro</label>
                    <input id="inFechaRetiro" type="date" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Motivos</label>
                    <textarea id="inMotivos" class="form-control" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnConfirmIniciar" class="btn btn-primary">Iniciar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Evaluaciones -->
<div class="modal fade" id="modalEvaluaciones" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Evaluaciones</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="evaluacionesContent">Cargando...</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Toast container -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="desvToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Desvinculaciones</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="desvToastBody">
        </div>
    </div>
</div>

<script src="/js/th/desvinculaciones.js"></script>

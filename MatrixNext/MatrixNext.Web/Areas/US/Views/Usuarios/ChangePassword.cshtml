@model MatrixNext.Data.Modules.US.Usuarios.Models.UsuarioChangePasswordViewModel

@{
    ViewData["Title"] = "Cambio de Contraseña";
}

<div class="card">
    <div class="card-body">
        <h4>
            Cambio de Contraseña
            @if (!string.IsNullOrEmpty(Model.NombreUsuario))
            {
                <span class="fw-normal">para @Model.NombreUsuario</span>
            }
        </h4>
        <form asp-area="US" asp-action="ChangePassword" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label"></label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
            <a asp-area="US" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link">Cancelar</a>
        </form>
    </div>
</div>

@if (TempData["PasswordChangedMessage"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index:1080;">
        <div id="passwordChangedToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["PasswordChangedMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toastEl = document.getElementById('passwordChangedToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
                setTimeout(function () { window.location.href = '@Url.Action("Index", "Home")'; }, 3000);
            }
        });
    </script>
}

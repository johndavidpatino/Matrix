@using MatrixNext.Data.Modules.US.Usuarios.Models
@model UsuarioFormViewModel

@{
    ViewData["Title"] = "Crear Nuevo Usuario";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-person-plus me-2"></i>Crear Nuevo Usuario</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-area="US" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Volver
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-plus me-2"></i>Datos del Nuevo Usuario</h5>
                </div>
                <div class="card-body">
                    <form asp-area="US" asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="NombreUsuario" class="form-label">Usuario</label>
                                <input asp-for="NombreUsuario" class="form-control" placeholder="ej: jperez">
                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="ej: usuario@empresa.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Nombres" class="form-label">Nombres</label>
                                <input asp-for="Nombres" class="form-control" placeholder="Juan">
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Apellidos" class="form-label">Apellidos</label>
                                <input asp-for="Apellidos" class="form-control" placeholder="Pérez García">
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label">Contraseña</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="text-muted">Mínimo 8 caracteres</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Activo" id="Activo" checked>
                                <label class="form-check-label" for="Activo">
                                    Usuario Activo
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-area="US" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Crear Usuario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title">Requisitos</h6>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Usuario único (no puede repetirse)</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Contraseña será encriptada automáticamente</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Email debe ser válido</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Nombres y apellidos son obligatorios</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@using MatrixNext.Data.Models.Usuarios
@model IEnumerable<UsuarioListViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-people-fill me-2"></i>Gestión de Usuarios</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus me-2"></i>Nuevo Usuario
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list me-2"></i>Listado de Usuarios</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 15%;">Usuario</th>
                                <th style="width: 25%;">Nombre Completo</th>
                                <th style="width: 25%;">Email</th>
                                <th style="width: 10%;" class="text-center">Estado</th>
                                <th style="width: 15%;" class="text-center">Fecha Creación</th>
                                <th style="width: 10%;" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td><strong>@usuario.NombreUsuario</strong></td>
                                    <td>@usuario.NombreCompleto</td>
                                    <td>@usuario.Email</td>
                                    <td class="text-center">
                                        @if (usuario.Activo)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-lg me-1"></i>Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="bi bi-x-lg me-1"></i>Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (usuario.FechaCreacion.HasValue)
                                        {
                                            @usuario.FechaCreacion.Value.ToString("dd/MM/yyyy")
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@usuario.Id" 
                                           class="btn btn-sm btn-info" title="Ver detalle">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@usuario.Id" 
                                           class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@usuario.Id" 
                                           class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info m-4" role="alert">
                    <i class="bi bi-info-circle me-2"></i>No hay usuarios registrados.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Confirmación de eliminación
        document.querySelectorAll('a[title="Eliminar"]').forEach(link => {
            link.addEventListener('click', function (e) {
                if (!confirm('¿Estás seguro de que deseas eliminar este usuario?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}

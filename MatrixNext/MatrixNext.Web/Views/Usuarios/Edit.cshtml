@using MatrixNext.Data.Models.Usuarios
@model UsuarioFormViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-pencil me-2"></i>Editar Usuario</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Volver
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Datos del Usuario</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="NombreUsuario" class="form-label">Usuario</label>
                                <input asp-for="NombreUsuario" class="form-control" disabled>
                                <small class="text-muted">No se puede modificar</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="ej: usuario@empresa.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Nombres" class="form-label">Nombres</label>
                                <input asp-for="Nombres" class="form-control" placeholder="Juan">
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Apellidos" class="form-label">Apellidos</label>
                                <input asp-for="Apellidos" class="form-control" placeholder="Pérez García">
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            Deja en blanco los campos de contraseña si no deseas cambiarla.
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label">Nueva Contraseña (Opcional)</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Activo" id="Activo">
                                <label class="form-check-label" for="Activo">
                                    Usuario Activo
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Nota</h5>
                </div>
                <div class="card-body">
                    <p class="small">Los cambios se aplicarán inmediatamente después de guardar.</p>
                    <p class="small text-muted">Última modificación puede consultarse en el historial de auditoría.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
